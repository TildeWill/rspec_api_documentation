<!DOCTYPE html>
<head>
    <title>{{resource_name}} API</title>
    <link rel="stylesheet" href="../assets/stylesheets/bootstrap.css"/>
    <link rel="stylesheet" href="../assets/stylesheets/codemirror.css"/>
    <link rel="stylesheet" href="../assets/stylesheets/application.css"/>
    <script src="../assets/javascripts/jquery-1-7-2.js"></script>
    <script src="../assets/javascripts/jquery-livequery.js"></script>
    <script src="../assets/javascripts/jquery-base64.js"></script>
    <script src="../assets/javascripts/jquery-ui-1-8-16-min.js"></script>
    <script src="../assets/javascripts/codemirror.js"></script>
    <script src="../assets/javascripts/javascript.js"></script>
    <script src="../assets/javascripts/application.js"></script>
    <style>
        td.required .name:after {
            float: right;
            content: "required";
            font-weight: normal;
            color: #F08080;
        }

        p {
            padding: 15px;
            font-size: 130%;
        }
    </style>
</head>
<body>
<div class="container">
<h1>{{resource_name}} API</h1>

<div class="article">
<h2>{{ description }}</h2>
{{# explanation }}
<p class="explanation">
    {{ explanation }}
</p>
{{/ explanation }}

{{# has_parameters? }}
<h3>Parameters</h3>
<table class="parameters table table-striped table-bordered table-condensed">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    {{# parameters }}
    <tr>
        <td
        {{# required }} class="required"{{/ required }}>
        <span class="name">{{ name }}</span>
        </td>
        <td>
            <span class="description">{{ description }}</span>
        </td>
    </tr>
    {{/ parameters }}
    </tbody>
</table>
{{/ has_parameters? }}

{{# requests }}
<div class='request'>
    <h3>Request</h3>
    <h4>Headers</h4>
    <pre class="request headers">{{ request_headers }}</pre>
    <h4>Route</h4>
    <pre class="request route highlight">{{ method }} {{ route }}</pre>
    {{# request_query_parameters }}
    <h4>Query Parameters</h4>
    <pre class="request query_parameters highlight">{{ request_query_parameters }}</pre>
    {{/ request_query_parameters }}
    {{# request_body }}
    <h4>Body</h4>

    <div class="request body">{{{ request_body }}}</div>
    {{/ request_body }}

    {{# curl }}
    <h4>cURL</h4>
    <pre class="request">{{ curl }}</pre>
    {{/ curl }}

    <h4>wURL</h4>

    <div class="wurl_form form-horizontal well" id="wurl_form">
        <form accept-charset="UTF-8" class="new_wurl" id="new_wurl">
            <div class="control-group">
                <label class="control-label">
                    URL
                </label>

                <div class="controls url">
                    <select id="wurl_request_method" name="wurl[request_method]">
                        <option value="{{ method }}" selected="true">{{ method }}</option>
                        <option value="GET">GET</option>
                        <option value="POST">POST</option>
                        <option value="PUT">PUT</option>
                        <option value="DELETE">DELETE</option>
                        <option value="HEAD">HEAD</option>
                    </select>
                    <input id="wurl_request_url" name="wurl[request_url]" value="{{ route_no_query }}">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Basic Auth
                </label>

                <div class="controls">
                    <div class="field_pair">
                        <input id="wurl_basic_auth_user" name="wurl[basic_auth_user]" placeholder="username">
                        <input id="wurl_basic_auth_password" name="wurl[basic_auth_password]"
                               placeholder="password">
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    <a class="button icon_only trash trash_headers ui-button ui-widget ui-state-default ui-corner-all ui-button-icon-only"
                       title="trash all headers" role="button"><span
                            class="ui-button-icon-primary ui-icon ui-icon-trash"></span><span
                            class="ui-button-text"></span></a>
                    <a class="add add_header button icon_only ui-button ui-widget ui-state-default ui-corner-all ui-button-icon-only"
                       title="add another header" role="button"><span
                            class="ui-button-icon-primary ui-icon ui-icon-plusthick"></span><span
                            class="ui-button-text"></span></a>
                    Headers
                </label>

                <div class="headers controls">
                    <div class="header_pair" style="display:none">
                        <input class="key ui-autocomplete-input" disabled="disabled" id="header_keys_"
                               name="header_keys[]"
                               type="text" autocomplete="off" role="textbox" aria-autocomplete="list"
                               aria-haspopup="true">
                        <input class="value" disabled="disabled" id="header_values_" name="header_values[]"
                               type="text">
                        <a class="delete_header destroy button icon_only ui-button ui-widget ui-state-default ui-corner-all ui-button-icon-only"
                           role="button" title=""><span
                                class="ui-button-icon-primary ui-icon ui-icon-closethick"></span><span
                                class="ui-button-text"></span></a>
                    </div>

                    {{# request_headers_hash }}
                    <div class="header_pair">
                        <input class="key ui-autocomplete-input" id="header_keys_" name="header_keys[]"
                               type="text"
                               autocomplete="off" role="textbox" aria-autocomplete="list" aria-haspopup="true"
                               value="{{ name }}">
                        <input class="value" id="header_values_" name="header_values[]" type="text"
                               value="{{ value }}">
                        <a class="delete_header destroy button icon_only ui-button ui-widget ui-state-default ui-corner-all ui-button-icon-only"
                           role="button" title=""><span
                                class="ui-button-icon-primary ui-icon ui-icon-closethick"></span><span
                                class="ui-button-text"></span></a>
                    </div>
                    {{/ request_headers_hash }}

                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    <a class="button icon_only trash trash_queries ui-button ui-widget ui-state-default ui-corner-all ui-button-icon-only"
                       title="trash all parameters" role="button"><span
                            class="ui-button-icon-primary ui-icon ui-icon-trash"></span><span
                            class="ui-button-text"></span></a>
                    <a class="add add_param button icon_only ui-button ui-widget ui-state-default ui-corner-all ui-button-icon-only"
                       title="add another parameter" role="button"><span
                            class="ui-button-icon-primary ui-icon ui-icon-plusthick"></span><span
                            class="ui-button-text"></span></a>
                    Query
                </label>

                <div class="params controls">
                    <div class="param_pair" style="display:none">
                        <input class="key" disabled="disabled" id="param_keys_" name="param_keys[]" type="text">
                        <input class="value" disabled="disabled" id="param_values_" name="param_values[]"
                               type="text">
                        <a class="delete_param destroy button icon_only ui-button ui-widget ui-state-default ui-corner-all ui-button-icon-only"
                           role="button" title=""><span
                                class="ui-button-icon-primary ui-icon ui-icon-closethick"></span><span
                                class="ui-button-text"></span></a>
                    </div>
                    {{# request_query_hash }}

                    <div class="param_pair">
                        <input class="key" id="param_keys_" name="param_keys[]" type="text" value="{{ name }}">
                        <input class="value" id="param_values_" name="param_values[]" type="text"
                               value="{{ value }}">
                        <a class="delete_param destroy button icon_only ui-button ui-widget ui-state-default ui-corner-all ui-button-icon-only"
                           role="button" title=""><span
                                class="ui-button-icon-primary ui-icon ui-icon-closethick"></span><span
                                class="ui-button-text"></span></a>
                    </div>
                    {{/ request_query_hash }}


                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Body
                </label>

                <div class="post_body controls">
                    <textarea id="wurl_request_body" name="wurl[request_body]" rows="10"
                              disabled="disabled"
                              class="textarea_disabled">{{ request_body_plain }}</textarea>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <input class="clear_fields btn" id="clear_fields" type="button" value="Clear">
                    <input class="give_it_a_wurl btn btn-primary" type="submit" value="Give it a Wurl!">
                </div>
            </div>
        </form>
    </div>

    {{# response_status }}
    <h3>Response</h3>
    <h4>Headers</h4>
    <pre class="response headers">{{ response_headers }}</pre>
    <h4>Status</h4>
    <pre class="response status">{{ response_status }} {{ response_status_text}}</pre>
    {{# response_body }}
    <h4>Body</h4>

    <div class="response body"><textarea>{{{ response_body }}}</textarea></div>
    {{/ response_body }}
    {{/ response_status }}
</div>
{{/ requests }}
</div>
</div>
</body>
</html>
